                        </Grid>
                    </Border>

                    <!-- Third Container -->
                    <Border Canvas.Left="640" Canvas.Top="0" Width="300" Height="325" BorderBrush="Black" BorderThickness="2" Background="LightGray">
                        <Grid>
                            <Image Width="300" Height="250"  Margin="0,0,-4,35" VerticalAlignment="Bottom" />
                            <TextBlock Text="Text in the bottom" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,5" />
                        </Grid>
                    </Border>
                </Canvas>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
