            </Canvas>
        </Canvas>

        <ScrollViewer HorizontalScrollBarVisibility="Visible">
            <StackPanel>
                <!-- First Container-->
                <Canvas Margin="550,150,0,0">
                    <!-- First Container -->
                    <TextBlock x:Name="SuggestedMoviesForYou" Text="Suggested Movies for you :" Canvas.Left="7" Canvas.Top="-70" FontSize="42" Foreground="#83727F" FontFamily="Inter" FontWeight="Bold" />
