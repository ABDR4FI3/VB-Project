                        <Grid>
                            <Image Width="300" Height="250" />
                            <TextBlock Text="Text in the bottom" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,5" />
                        </Grid>
                    </Border>
                    <TextBlock x:Name="SuggestedSoccerGamesForYou" Text="Suggested Soccer Games for you :" Canvas.Left="0" Canvas.Top="370" FontSize="42" Foreground="#83727F" FontFamily="Inter" FontWeight="Bold" />
                    <!-- Second Container -->
                    <Border Canvas.Left="320" Canvas.Top="0" Width="300" Height="325" BorderBrush="Black" BorderThickness="2" Background="LightGray">
