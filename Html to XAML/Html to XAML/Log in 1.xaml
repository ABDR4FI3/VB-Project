            <Border Width="500" Height="500" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,79,0,0" CornerRadius="60">
                <Image x:Name="RemovebgPreview1" Source="bg Login.png" Stretch="UniformToFill"/>
