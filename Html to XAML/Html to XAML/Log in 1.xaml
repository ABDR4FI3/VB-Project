      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Html_to_XAML"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1500"
      Title="Log_in_1">
    <Grid x:Name="LogIn1" Width="1507" Height="750" VerticalAlignment="Top">
        <Grid x:Name="LogIn1stPage" Width="1507" Height="750" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle x:Name="Rectangle13" Width="1500" Height="750" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="#B8A6B4"/>
            <Rectangle x:Name="Rectangle14" Width="600" Height="750" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="#312F3D"/>
