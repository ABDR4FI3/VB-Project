        <Grid x:Name="Group2" Width="1353" Height="644" Margin="38,46,0,0">
            <Rectangle x:Name="Userame" Width="700" Height="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="653,79,0,0" Fill="#D9D9D9" RadiusX="25" RadiusY="25"/>
            <Rectangle x:Name="Rectangle21" Width="350" Height="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1003,524,0,0" Fill="#312F3D" RadiusX="25" RadiusY="25"/>
